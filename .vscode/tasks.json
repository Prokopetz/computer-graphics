{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "run",
      "command": ["${workspaceFolder}/app"],
      "dependsOn": [
        "buildApp"
    ],
    "group": {
      "kind": "build",
      "isDefault": true
     },
    },
   {
    "type": "cppbuild",
    "label": "buildApp",
    "command": "/usr/bin/clang++",
    "args": [
     "-std=c++17",
     "-fdiagnostics-color=always",
     "-Wall",
     "-g",
     "-I${workspaceFolder}/dependencies/include",
     "-L${workspaceFolder}/dependencies/library",
     "${workspaceFolder}/dependencies/library/libglfw.3.3.dylib",
     "${workspaceFolder}/dependencies/library/libGLEW.2.2.0.dylib",
     "${file}",
     "-o",
     "${workspaceFolder}/app",
     "-framework",
     "OpenGL",
     "-framework",
     "Cocoa",
     "-framework",
     "IOKit",
     "-framework",
     "CoreVideo",
     "-framework",
     "CoreFoundation",
     "-Wno-deprecated"
    ],
    "options": {
     "cwd": "${fileDirname}"
    },
    "problemMatcher": ["$gcc"],
    "detail": "compiler: /usr/bin/clang++",
   },

  ]
 }